# Baseball Stats Application Environment Variables
# Copy this file to .env and fill in the values
#
# IMPORTANT: Never commit the .env file to version control!

# =============================================================================
# REQUIRED SETTINGS - Application will not start without these
# =============================================================================

# Database URL (REQUIRED)
# For local development outside Docker:
DATABASE_URL=postgresql+asyncpg://baseball_user:baseball_pass@localhost:5433/baseball_db
# Note: Docker Compose overrides this with its own internal URL

# Secret key for JWT token signing (REQUIRED, minimum 32 characters)
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# OpenAI API Key for AI-generated player descriptions
# Get from: https://platform.openai.com/api-keys
# Leave empty to disable AI features
OPENAI_API_KEY=

# Debug mode (set to true for development)
DEBUG=false

# CORS allowed origins (comma-separated)
# ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173
