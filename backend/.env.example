# Baseball Stats API - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection URL for async SQLAlchemy
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/baseball

# Database connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================
# Security Configuration
# ============================================
# Secret key for JWT token generation (MUST be at least 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-min-32-chars-change-this-in-production

# JWT algorithm (default: HS256)
ALGORITHM=HS256

# JWT token expiration time in minutes (default: 30)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# OpenAI Configuration
# ============================================
# OpenAI API key for generating player descriptions
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins for CORS
# Examples:
#   - Development: http://localhost:3000,http://localhost:8000
#   - Production: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================
# Application Configuration
# ============================================
# Application name (default: Baseball Stats API)
APP_NAME=Baseball Stats API

# Debug mode (set to true for development, false for production)
DEBUG=false

# ============================================
# Docker Configuration (Optional)
# ============================================
# These are used if you're running the app in Docker

# PostgreSQL Docker settings (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=baseball
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ============================================
# Development Tools (Optional)
# ============================================
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable SQL query logging (useful for debugging)
SQL_ECHO=false
